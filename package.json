{
  "name": "@shelf/aws-lambda-libreoffice",
  "version": "4.0.4",
  "description": "Utility to work with Docker version of LibreOffice in Lambda",
  "keywords": [
    "aws lambda",
    "libreoffice",
    "serverless",
    "pdf"
  ],
  "repository": "shelfio/aws-lambda-libreoffice",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "files": [
    "lib"
  ],
  "main": "lib",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ],
    ".circleci/config.yml": [
      ".husky/validate-circleci-config.sh"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@shelf/is-audio-filepath": "2.0.0",
    "del": "7.0.0",
    "is-image": "3.1.0",
    "is-video": "1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.18.6",
    "@babel/core": "7.18.6",
    "@shelf/babel-config": "1.0.2",
    "@shelf/eslint-config": "2.19.3",
    "@shelf/prettier-config": "1.0.0",
    "@types/jest": "28.1.4",
    "@types/node": "16",
    "babel-jest": "28.1.2",
    "eslint": "8.19.0",
    "husky": "8.0.1",
    "jest": "28.1.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
